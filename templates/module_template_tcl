proc ModulesHelp { } {
    puts stdout "
Description
============
${DESCRIPTION}

More information
================
- ${REGISTRY}: ${REGISTRY_URL}
- Home page:     ${HOMEPAGE}
"
}

module-whatis "Name:        ${APP}"
module-whatis "Version:     ${VERSION}"
module-whatis "Description: ${DESCRIPTION}"
module-whatis "${REGISTRY}: ${REGISTRY_URL}"
module-whatis "Home page:   ${HOMEPAGE}"

#-- Set some internal variables
set     image   "${IMAGE}"
set     uri     "${URI}"
set     version "${VERSION}"
set     modroot "${EXECUTABLE_DIR}/${APP}/${VERSION}"

#-- Conflict with any other version of this module
conflict "${APP}"

#-- Add the applicationâ€™s bin directory to the PATH
prepend-path    PATH    "${modroot}/bin"